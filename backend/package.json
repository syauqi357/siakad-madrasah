{
	"name": "siakad-madrasah",
	"version": "1.0.0",
	"description": "Sistem Informasi Akademik Madrasah",
	"main": "electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon app.js",
		"start": "node app.js",
		"seed": "",
		"build": "tsc",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"db:generate": "drizzle-kit generate",
		"db:reset": "rm -f sqlite.db && npm run db:migrate && npm run db:seed",
		"electron:dev": "electron .",
		"electron:rebuild": "electron-builder install-app-deps",
		"electron:build": "electron-builder --config electron-builder.json",
		"electron:build:win": "electron-builder --win --config electron-builder.json",
		"electron:build:portable": "electron-builder --win portable --config electron-builder.json",
		"postinstall": "electron-builder install-app-deps || echo 'rebuild skipped'"
	},
	"author": "Syauqi Husin",
	"license": "MIT",
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"bcryptjs": "^3.0.3",
		"better-sqlite3": "^12.4.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"exceljs": "^4.4.0",
		"express": "^5.2.1",
		"express-rate-limit": "^8.2.1",
		"express-slow-down": "^3.0.1",
		"jsonwebtoken": "^9.0.3",
		"multer": "^2.0.2"
	},
	"devDependencies": {
		"@electron/rebuild": "^3.7.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.8",
		"electron": "^40.1.0",
		"electron-builder": "^25.1.8",
		"jest": "^30.2.0",
		"nodemon": "^3.1.11",
		"tsx": "^4.21.0"
	}
}
